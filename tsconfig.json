{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "api",
    "baseUrl": "api",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "api/**/*",
    "api/routes",
    "api/schemas",
    "api/routesDoc",
    "api/services",
    "api/utils",
    "api/types",
    "api/index.ts",
    ".eslintrc.js"
  ]
}
