{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "api",
    "baseUrl": "./",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "paths": {
      "@/*": ["api/*"],
    },
  },
  "include": [
    "api/**/*.ts",
    "api/**/*.js",
    ".eslintrc.js",
  ],
  "exclude": [
    "node_modules",
    "dist",

  ]
}
