{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
